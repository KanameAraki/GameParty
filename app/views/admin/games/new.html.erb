<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h3 class="my-5">新規ゲーム登録ページです</h3>
      <%= form_with model: [:admin,@game], local: true do |f|%>
      <div class="field form-group">
      <%= f.label :image ,"画像を設定："%>
      <%= f.attachment_field :image %>
      </div>
      <div class="field form-group">
      <%= f.label :name ,"ゲーム名"%>
      <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="field form-group">
      <%= f.label :introduction ,"説明文"%>
      <%= f.text_area :introduction, class:"form-control", size:"45x7" %>
      </div>
      <div class="field form-group text-right">
      <%= f.submit "ゲームを追加する", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>