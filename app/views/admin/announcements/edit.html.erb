<div class="container">
  <div class="row">
    <div class="mx-auto w-50">
        <h4 class="my-5 bg-light">お知らせの編集</h4>
        <%= form_with model: [:admin,@announcement], local: true do |f|%>
          <%= render "public/shared/error_messages", resource: f.object %>
          <div class="form-group">
            <%= f.label :title,"タイトル" %>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body,"本文" %>
            <%= f.text_area :body,size:"40x10", class:"form-control" %>
          </div>
          <div class="form-group text-right">
            <%= f.submit "編集", class:"btn btn-success"%>
          </div>
        <% end %>
    </div>
  </div>
</div>