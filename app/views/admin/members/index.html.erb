<div class="container">
  <div class="d-flex justify-content-center my-5">
    <h3 class="mr-5">メンバー一覧</h3>
    <%= form_with url: admin_members_path,method: :get, local: true do |f| %>
      <%= f.text_field :search, value: params[:search] %>
      <%= f.submit "検索", name: nil %>
    <% end %>
  </div>

  <div class="row">
    <table class="table w-50 text-left mx-auto">
      <tr class="thead-light">
        <th></th>
        <th>メンバー名</th>
        <th></th>
      </tr>
      <% @members.each do |member|%>
      <tr>
        <td class="pt-3">
          <%= link_to member_path(member),class:"text-decoration-none" do %>
             <%= attachment_image_tag member, :image, format: "jpeg", fallback: "game_icon.jpeg",size: "30x30"%>
          <% end %>
        </td>
        <td><%= link_to member.name,member_path(member),class:"text-dark text-decoration-none"%></td>
        <td class="text-right">
    　　　<%= link_to "編集する", edit_member_path(member) %>
        </td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>