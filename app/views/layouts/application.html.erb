<!DOCTYPE html>
<html>
  <head>
    <title>GameParty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="background-color: #e3f2fd;">
      <div class="container">
        <nav class="navbar navbar-light">
          <%= link_to "GameParty!!", root_path, class:"navbar-brand"%>
          <ul class="nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item mr-2">
                <%= link_to "ゲーム一覧", admin_games_path,class:"nav-link text-dark btn btn-light"%>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class:"nav-link text-dark btn btn-light"%>
              </li>
            <% elsif member_signed_in? %>
              <li class="nav-item mr-2">
                <%= link_to "ログアウト", destroy_member_session_path, method: :delete,class:"nav-link text-dark btn btn-light"%>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "マイページ", member_path(current_member),class:"nav-link text-dark btn btn-light" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "投稿一覧", posts_path,class:"nav-link text-dark btn btn-light" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "ゲーム一覧", games_path,class:"nav-link text-dark btn btn-light" %>
              </li>
            <% else %>
              <li class="nav-item mr-2">
                <%= link_to "アバウト", about_path,class:"nav-link text-dark btn btn-light" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "新規登録", new_member_registration_path,class:"nav-link text-dark btn btn-light" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "ログイン", new_member_session_path,class:"nav-link text-dark btn btn-light" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer class="mt-3">
      <div class="container">
        <div class="row justify-content-center">
          <p>@Game Party!!</p>
        </div>
      </div>
    </footer>

  </body>
</html>
