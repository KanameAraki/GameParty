<div class="container">
  <div class="row">
    <div class="mx-auto w-50">
      <h4 class="text-center my-4">お問い合わせ内容確認</h4>
      <table class="table">
        <tbody>
          <tr>
            <td class="text-center" style="width: 30%;">お名前</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="text-center">メールアドレス</td>
            <td><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="text-center">お問い合わせ概要</td>
            <td><%= @contact.subject_i18n %></td>
          </tr>
          <tr>
            <td class="text-center">お問い合わせ内容</td>
            <td style="white-space: pre-wrap;"><%= @contact.body %></td>
          </tr>
        </tbody>
      </table>
      <span class="d-flex my-4">
        <div class="mr-auto">
          <%= form_for @contact, url: back_path do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :body %>
            <%= f.submit '入力画面に戻る', class:"btn btn-secondary"%>
          <% end %>
        </div>
        <div>
          <%= form_for(@contact) do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :body %>
            <%= f.submit '送信', class:"btn btn-primary" %>
          <% end %>
        </div>
      </span>
    </div>
  </div>
</div>