<% if current_member.favorites.exists?(post_id: post.id) %>
  <span><%= link_to "❤️",post_favorites_path(post.id),method: :delete, class:"text-decoration-none mr-2", remote: true %><%= post.favorites.count %>いいね</span>
<% else %>
  <span><%= link_to "♡",post_favorites_path(post.id),method: :post, class:"text-decoration-none mr-2", remote: true %><%= post.favorites.count %>いいね</span>
<% end %>