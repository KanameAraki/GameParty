<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <div class="text-center">
        <h3><%= @announcement.title %></h3>
      </div>
      <p class="mb-0 ml-3 mt-3">本文</p>
      <div class="border p-3">
        <%= safe_join(@announcement.body.split("\n"),tag(:br))%>
      </div>
      <div class="text-right">
        <%= link_to "お知らせ一覧へ",announcements_path%>
      </div>
    </div>
  </div>
  <% if admin_signed_in? %>
    <div class="row">
      <div class="mx-auto">
        <%= link_to "編集",edit_admin_announcement_path(@announcement), class:"btn btn-success justify-content-start"%>
        <%= link_to "削除",admin_announcement_path(@announcement),method: :delete, class:"btn btn-danger justify-content-end",data: {confirm:"お知らせを削除しますか？",cancel:"やめる",commit:"削除する"},title:"確認"%>
      </div>
    </div>
  <% end %>
</div>